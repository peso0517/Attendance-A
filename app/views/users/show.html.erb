<% provide(:title, "勤怠表示画面") %>

  <table class="table table-bordered">
   <head>
    <tr>
     <!--#params[:first_day]に前月or翌月の情報を入れてControllerへ渡してあげます 
      #▼前月の情報を渡す  --->
     <td> 
      <%= link_to "◀︎", user_path(first_day: @first_day.prev_month) %>
    　<%= @first_day.year %>年<%= @first_day.month %>月の時間管理表
         <!-- #▼翌月の情報を渡す -->
      <%= link_to "▶️︎", user_path(first_day: @first_day.next_month) %>
     </td>
     
     <td>
      指定勤務開始時間:<%= basic_info_times(@user.specified_work_time) if @user.specified_work_time.present? %><br>
      指定勤務終了時間:<%= basic_info_times(@user.specified_end_time) if @user.specified_end_time.present? %>
     </td>
     
     <td colspan="3">基本時間:<%= basic_info_times(@user.basic_work_time) if @user.basic_work_time.present? %></td>
     
     <td>初日:<%= @first_day.month %>/<%= @first_day.day %></td>
    </tr>
    
    <tr>
     <td>所属:<%= @user.affiliation %></td>
     <td>氏名:<%= @user.name %></td>
     <td>社員番号:<%= @user.employee_number %></td>
     <td>カードID:<%= @user.user_card_id %></td>
     <td>出勤日数:<%= @attendance_sum %></td>
     <td>締め:<%= @last_day.month %>/<%= @last_day.day %></td>
    </tr>
   </head>
  </table>
 <!--中断-->
   <% if @user.superior === true %>
    <%= link_to "【所属長承認申請のお知らせ】", "#" %><br>
    <%= link_to "【勤怠変更申請のお知らせ】", "#" %><br>
    <%= render 'users/one_overtime_approval_modal' %>
   <% end %>
   <%= link_to "勤怠を編集", edit_attendance_path(params:{id: @user.id, first_day: @first_day}), class: "btn btn-primary" %>
   <%= link_to "CSV出力", csv_output_path(params:{id: @user.id, first_day: @first_day, format: :csv}), class: "btn btn-primary" %>
 <!--ここから下段の題目　-->
  <br>
  
  <!--勤怠情報表示テーブル-->
   <table class = "table attendance-table table-striped table-bordered table-hover">
    <!--勤怠情報表示ヘッダー-->
    <thead>
      <!--１列目-->
     <tr>
      <th rowspan = "4">残業申請</th>
      <th rowspan = "4">日付</th>
      <th rowspan = "4">曜日</th>
      <th colspan = "8">【実績】</th>
      <th colspan = "5">【所定外勤務】</th>
     </tr>
    
     <tr>
        <!--rowspan:縦結合、colspan：横結合-->
      <th colspan = "3">出社</th>
      <th colspan = "3">退社</th>
      <th rowspan = "2">在社時間</th>
      <th rowspan = "2">備考</th>
      <th colspan = "2">終了予定時間</th>
      <th rowspan = "2">時間外勤務時間</th>
      <th rowspan = "2">業務処理内容</th>
      <th rowspan = "2">指示者</th>
     </tr>
    
      <!--２列目-->
     <tr>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
      <th></th>
      <th>時</th>
      <th>分</th>
      
     </tr>
    </thead>
   </br>
   <!-- ここから下段の出退勤時間登録フォーム-->
   <tbody>
    <tr class = "days">
   <!--この列をeachで繰り返し表示している-->
    <% @days.each do |d| %>
    
     <!--1列目：残業申請-->
      <td>
       <button type="button" value="<%= d.day %>" class="btn btn-primary" data-toggle="modal" data-target="#overtime-modal" data-date="<%= d.day.month %>/<%= d.day.day %>" data-hidden_date="<%= d.day %>" data-week ="<%= @youbi[d.day.wday] %>">
        残業申請
       </button>
       <%= render 'users/one_overtime_plan_modal' %>
      </td>
       <!--２列目：日付-->
       <td><%= d.day.month %>/<%= d.day.day %></td>
       
       <!--３列目：曜日-->
       <td><%= @youbi[d.day.wday] %></td>
       
       <!--４〜５列目：出社時間表示（データが存在する場合）-->
       <td><%= d.attendance_time.hour if d.attendance_time.present? %></td>
       <td><%= d.attendance_time.min if d.attendance_time.present? %></td>
       
       <!--６列目：自身の勤怠で出社時間と退社時間が空なら表示   -->
       <td>
         <% if d.day == Date.current && d.attendance_time.nil? %>
          <%= button_to "出社",attendance_time_create_path(@user,params:{id: @user.id}),{class: "btn btn-default"}%>
         <% end %>
       </td>
       
       <!--７〜８列目：出社時間表示（データが存在する場合）-->
       <td><%= d.leaving_time.hour if d.leaving_time.present? %></td>
       <td><%= d.leaving_time.min if d.leaving_time.present? %></td>
       
       <!--９列目：退社時間表示（データが存在する���合）-->
       <td>
        <% if d.day == Date.current && d.attendance_time.present? && d.leaving_time.nil? %>
          <%= button_to "退社",leaving_time_create_path(@user,params:{id: @user.id}),{class: "btn btn-default"}%>
        <% end %>
       </td>
       
        <!--１０列目：在社時間-->
       <td>
        <%= working_times(d.attendance_time,d.leaving_time) if d.attendance_time.present? && d.leaving_time.present? %>
       </td>
       
       <!--１１列目：備考（空欄）-->
       <td></td>
       
       <!--１２列目：残業予定時間（hour）-->
       <td>
        <% if d.overtime_plan.present? %>
         <%= d.overtime_plan.hour %>
        <% end %>
       </td>
       <!--１３列目：残業予定時間（minutes）-->
       <td>
        <% if d.overtime_plan.present? %>
         <%= d.overtime_plan.min %>
        <% end %>
       </td>
       <!--１４列目：残業時間（予定）-->
       <td>
        <% if d.overtime_plan.present? %>
         <% if d.check === 1 %>
          <%= format("%.1f", (Time.new(d.day.year,d.day.month,d.day.day,d.overtime_plan.hour,d.overtime_plan.min) + 1.day - Time.new(d.day.year,d.day.month,d.day.day,@user.specified_end_time.hour,@user.specified_end_time.min))/3600) %>
         <% else %> 
          <%= format("%.1f", (Time.new(d.day.year,d.day.month,d.day.day,d.overtime_plan.hour,d.overtime_plan.min) - Time.new(d.day.year,d.day.month,d.day.day,@user.specified_end_time.hour,@user.specified_end_time.min))/3600) %>
         <% end %>
        <% end %>
       </td>
       <!--１５列目：残業指示（空欄）-->
       <td>
        <% if d.business_process.present? %>
         <%= d.business_process %>
        <% end %>
       </td>
       <!--１６列目：指示者（空欄）-->
       <td>
        <!--申請状況-->
        <% @applying_superior = @superior_user.find_by(id: d.authority_user_id) unless !d.authority_user_id.present? %>
        <% if d.apply_state === "applying" %>
         <%= "申請中" %><br>
         =><%= @applying_superior.name %>
        <% elsif d.apply_state === "applied" %>
         <%= "承認済" %>
        <% elsif d.apply_state === "denial" %>
         <%= "申請却下" %>
        <% end %>
       </td>
      </tr>
      <% end %>
     </tbody>
     
     <!--勤怠表示画面フッター-->
     <tfoot>
      <tr>
       <!--１列目：空欄-->
       <td></td>
       <!--２〜３列目：総合勤務時間＝基本時間＊出勤日数-->
       <td colspan = "2">
        <!--総合勤務時間＞０-->
        <%= total_attendance_times(@user.basic_work_time).to_d * @attendance_sum if @user.basic_work_time.present? %>
        <!--総合勤務時間＝０-->
        <%= 0 if @user.basic_work_time.blank? %>
       </td>
       
       <!--３〜８列目：空欄-->
       <td colspan = "6"></td>
       
       <!--９列目：在社時間の合計-->
       <td>
        <!--在社時間＞０ -->
        <%= ((@total_time.to_d/ 60)/ 60).truncate(2) if @total_time.present? %>
        <!--在社時間＝０ -->
        <%= 0.0 if @total_time.blank? %>
       </td>
       <!--１０列目：空欄-->
       <td></td>
       
       <!--１１列目：空欄-->
       <td></td>
       
       <!--１２列目：空欄-->
       <td></td>
       
       <!--１３列目：空欄-->
       <td></td>
             
       <!--１４列目：空欄-->
       <td></td>
       
       <!--１５列目：所属長承認-->
       <td>所属長承認</td>
      </tr>
     </tfoot>
    </table>
