<div id ="base-add-popups">
  <a id= "base-add" href="#bases-aa">拠点情報追加</a>
</div>

<div class ="white-popup mfp-with-anim mfp-hide" id="bases-aa">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
    <h1>拠点情報の登録</h1>
    <%= form_with model: @base,url: bases_path(@base), local: true do |f| %>
      <%= f.label :拠点名 %>
      <%= f.text_field :base_name, class: 'form-control' %>
      <%= f.label :拠点種類 %>
      <%= f.text_field :base_type, class: 'form-control' %>
      <%= f.submit "新規登録", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
<script>
$(function(){
  $('#base-add-popups').magnificPopup({
    delegate: 'a'
  });
});
</script>